---
import AnimatedHeroBackground from './AnimatedHeroBackground.tsx';
---
<section class="h-[60vh] flex items-center justify-center text-center relative">
    <!-- Layer 2: Particle Animation -->
    <AnimatedHeroBackground client:idle />
    
    <!-- Layer 3: Hero Content -->
    <div class="relative z-10 p-10">
        <p class="text-lg text-[var(--cyan)] font-mono mb-4 pt-24">Managed IT Services for Andrews, TX</p>
        <h1 class="text-5xl md:text-8xl font-bold mb-4 text-[var(--white)]">Proactive IT. Powerful Results.</h1>
        <p class="text-lg md:text-xl max-w-3xl mx-auto mb-8 text-[var(--light-slate)]">
            Innotec provides reliable, secure, and scalable IT solutions to keep your business running at peak performance.
        </p>
        <div class="pt-6">
            <a href="/contact" class="font-mono text-[var(--cyan)] border border-[var(--cyan)] px-8 py-4 rounded-md hover:bg-cyan-400/10 transition-all text-lg">
                Get a Free Consultation
            </a>
        </div>
    </div>
</section>
