---
import Document from '../assets/document.svg';
import Dollar from '../assets/Dollar.svg';
import Handshake from '../assets/handshake.svg';
import Magnifying from '../assets/magnifying.svg';
---
<section id="services" class="py-20 bg-[var(--navy)]/60">
    <div class="container mx-auto px-6 text-center">
      <h2 class="text-4xl section-header-glow">Our Core IT Services</h2>
      <p class="max-w-2xl mx-auto mt-4 mb-12">
          From foundational infrastructure to proactive security, we provide the essential IT services that power businesses in Andrews.
      </p>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <!-- Cards now use a slightly darker navy for contrast -->
          <div class="tech-card text-left">
              <h3 class="text-2xl mb-4 text-center">Managed IT</h3>
              <ul class="text-[var(--slate)] list-inside">
                  <li>24/7 System Monitoring</li>
                  <li class="mt-2">Proactive Maintenance</li>
                  <li class="mt-2">Help Desk Support</li>
                  <li class="mt-2">Vendor Management</li>
                </ul>
            </div>
            <!-- Card 2: Cybersecurity -->
            <div class="tech-card text-left">
                <h3 class="text-2xl mb-4 text-center">Cybersecurity</h3>
                <ul class="text-[var(--slate)] list-inside">
                    <li>Threat Detection</li>
                    <li class="mt-2">Firewall Management</li>
                    <li class="mt-2">Employee Training</li>
                    <li class="mt-2">Compliance Audits</li>
                </ul>
            </div>
            <!-- Card 3: Cloud Services -->
            <div class="tech-card text-left">
                <h3 class="text-2xl mb-4 text-center">Cloud Services</h3>
                <ul class="text-[var(--slate)] list-inside">
                    <li>Microsoft 365 & Azure</li>
                    <li class="mt-2">Data Backup & Recovery</li>
                    <li class="mt-2">Cloud Migration</li>
                    <li class="mt-2">Hosted Servers</li>
                </ul>
            </div>
            <!-- Card 4: Network Infrastructure -->
            <div class="tech-card text-left">
                <h3 class="text-2xl mb-4 text-center">Infrastructure</h3>
                <ul class="text-[var(--slate)] list-inside">
                    <li>Network Design</li>
                    <li class="mt-2">Wi-Fi Solutions</li>
                    <li class="mt-2">Server Installation</li>
                    <li class="mt-2">Cabling & Wiring</li>
                </ul>
            </div>
        </div>
    </div>
</section>