---
import { Image } from 'astro:assets';
// Placeholder images - replace these with your own from the /src/assets folder
import managedItImage from '../assets/Resistor.jpg';
import cybersecurityImage from '../assets/CyberSec.jpg';
import cloudServicesImage from '../assets/DataCenter.jpg';
import SMDRepairImage from '../assets/Resistor.jpg';

const servicesData = [
  {
    title: "Managed IT Services",
    description: "We become your dedicated IT department, providing proactive monitoring, maintenance, and unlimited support to keep your systems running flawlessly and prevent problems before they start.",
    image: managedItImage,
    subServices: [
      { name: "24/7 System Monitoring", href: "#" },
      { name: "Proactive Maintenance", href: "#" },
      { name: "Help Desk & On-site Support", href: "#" },
      { name: "IT Strategy & Consulting", href: "#" },
    ]
  },
  {
    title: "Cybersecurity Solutions",
    description: "Protect your most valuable assetâ€”your data. We implement multi-layered security strategies, from advanced threat detection to employee training, to defend your business against evolving cyber threats.",
    image: cybersecurityImage,
    subServices: [
      { name: "Managed Firewall & VPN", href: "#" },
      { name: "Endpoint Detection & Response", href: "#" },
      { name: "Security Awareness Training", href: "#" },
      { name: "Compliance & Risk Audits", href: "#" },
    ]
  },
  {
    title: "Cloud & Infrastructure",
    description: "Leverage the power and scalability of the cloud. We design and manage robust cloud and on-premise infrastructure, ensuring your business has a secure, reliable, and high-performance foundation.",
    image: cloudServicesImage,
    subServices: [
      { name: "Microsoft 365 & Azure", href: "#" },
      { name: "Cloud Migration & Management", href: "#" },
      { name: "Data Backup & Disaster Recovery", href: "#" },
      { name: "Server & Network Installation", href: "#" },
    ]
  }
];
---
<section id="services" class="py-20 bg-[var(--navy)]/60">
  <div class="container mx-auto px-6">
    <div class="text-center mb-20">
      <h2 class="text-4xl section-header-glow">Comprehensive IT Solutions</h2>
      <p class="max-w-3xl mx-auto mt-4">
        We offer a full suite of services designed to handle all your technology needs, allowing you to focus on growing your business.
      </p>
    </div>

    <div class="space-y-24">
      {servicesData.map((service) => (
        <div class={`flex flex-col md:flex-row items-center gap-12`}>
          <!-- Left Column: Text Content -->
          <div class="md:w-2/3">
            <h3 class="text-3xl text-[var(--cyan)] font-bold mb-4">{service.title}</h3>
            <p class="mb-6">{service.description}</p>
            <ul class="service-list grid grid-cols-1 sm:grid-cols-2 gap-x-6">
              {service.subServices.map(sub => (
                <li><a href={sub.href}>{sub.name}</a></li>
              ))}
            </ul>
          </div>
          <!-- Right Column: Image -->
          <div class="md:w-1/3">
            <Image src={service.image} alt={service.title} class="rounded-lg shadow-2xl w-full h-auto" />
          </div>
        </div>
      ))}
    </div>
  </div>
</section>