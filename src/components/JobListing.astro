---
const { title, location, type, description, qualifications } = Astro.props;
---
<div class="bg-white p-8 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
  <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-4">
    <h3 class="text-2xl font-bold text-gray-800">{title}</h3>
    <div class="flex items-center text-sm text-gray-500 mt-2 md:mt-0">
      <span class="flex items-center">
        <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
        {location}
      </span>
      <span class="px-4">|</span>
      <span class="flex items-center">
        <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
        {type}
      </span>
    </div>
  </div>
  <p class="text-gray-600 mb-6">{description}</p>
  
  <div class="mb-6">
    <h4 class="font-semibold text-gray-700 mb-2">Key Qualifications:</h4>
    <ul class="list-emerald list-inside text-gray-600">
      {qualifications.map((q: unknown, index: number) => <li class={index > 0 ? 'mt-2' : ''}>{q}</li>)}
    </ul>
  </div>

  <div class="text-right">
    <a href="/apply" class="inline-block bg-emerald-600 text-white px-6 py-2 rounded-md hover:bg-emerald-700 transition-all shadow">
      Apply Now
    </a>
  </div>
</div>
