---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ContactForm from '../components/ContactForm.astro';
import ScrollReveal from '../components/ScrollReveal.tsx';
---
<Layout title="Contact Us | Innotec">
  <Header />
  <main class="pt-24">
    <section class="text-center py-12">
        <ScrollReveal client:visible>
            <h1 class="text-5xl md:text-6xl font-bold mb-4">Get in Touch</h1>
            <p class="text-lg max-w-3xl mx-auto">
                Have a question or need a consultation? We're here to help. Fill out the form below, and our team will get back to you shortly.
            </p>
        </ScrollReveal>
    </section>
    <ScrollReveal client:visible><ContactForm /></ScrollReveal>
  </main>
  <Footer />
</Layout>